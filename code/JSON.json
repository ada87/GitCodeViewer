{
  "project": {
    "name": "GitCodeViewer",
    "version": "1.2.0",
    "description": "An offline-first Git client and code reader for mobile devices.",
    "license": "MIT",
    "homepage": "https://gitcodeviewer.com",
    "repository": {
      "type": "git",
      "url": "https://github.com/ada87/GitCodeViewer.git"
    }
  },
  "configuration": {
    "theme": {
      "mode": "system",
      "editor": "vs-dark",
      "fontFamily": "JetBrains Mono, Fira Code, monospace",
      "fontSize": 14,
      "lineHeight": 1.5,
      "ligatures": true
    },
    "network": {
      "timeoutMs": 30000,
      "userAgent": "GitCodeViewer/Android 1.2.0",
      "proxy": {
        "enabled": false,
        "host": "127.0.0.1",
        "port": 7890
      }
    },
    "git": {
      "defaultBranch": "main",
      "cloneDepth": 1,
      "lfs": false,
      "autoFetch": true,
      "credentials": {
        "storage": "encrypted_keystore",
        "providers": [
          "github.com",
          "gitlab.com",
          "bitbucket.org"
        ]
      }
    },
    "fileSystem": {
      "maxCacheSizeMB": 500,
      "ignorePatterns": [
        "node_modules",
        ".git",
        "dist",
        "build",
        "*.log",
        ".DS_Store"
      ],
      "binaryExtensions": [
        "png", "jpg", "jpeg", "gif", "pdf", "zip", "apk", "exe"
      ]
    }
  },
  "supportedLanguages": [
    { "id": "javascript", "extensions": [".js", ".jsx", ".mjs"], "color": "#f1e05a" },
    { "id": "typescript", "extensions": [".ts", ".tsx"], "color": "#2b7489" },
    { "id": "python", "extensions": [".py"], "color": "#3572A5" },
    { "id": "java", "extensions": [".java"], "color": "#b07219" },
    { "id": "c", "extensions": [".c", ".h"], "color": "#555555" },
    { "id": "cpp", "extensions": [".cpp", ".hpp", ".cc"], "color": "#f34b7d" },
    { "id": "rust", "extensions": [".rs"], "color": "#dea584" },
    { "id": "go", "extensions": [".go"], "color": "#00ADD8" }
  ],
  "mockData": {
